    "version": "0.2.0",
    "configurations": [
        {
            "type": "perl",
            "request": "launch",
            "name": "Perl-Debug local",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/${relativeFile}",
            "exec": "C:/Perl64/bin/perl.exe",
            "execArgs": [],
            "root": "${workspaceRoot}/",
            "inc": [],
            "args": [],
            "env": {},
            "debugRaw": false,
            "debugLog": false,
            "stopOnEntry": false,
            "sessions": "single"
        },
        {
            "type": "perl",
            "request": "launch",
            "name": "Perl-Debug remote",
            "console": "remote",
            "program": "${workspaceFolder}/${relativeFile}",
            "root": "${workspaceRoot}/",
            "stopOnEntry": true,
            "port": 5000,
            "sessions": "single"
        }
    ]
}